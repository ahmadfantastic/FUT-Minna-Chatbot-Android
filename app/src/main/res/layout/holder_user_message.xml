<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorTransparent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="60dp"
    android:layout_margin="1dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/txt_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_ash_background"
        android:textColor="@color/colorDarkAsh"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:minWidth="100dp"
        android:layout_alignParentEnd="true"
        tools:text="This i" />

    <TextView
        android:id="@+id/txt_message_time"
        android:layout_marginStart="15dp"
        android:layout_below="@id/txt_message_body"
        android:layout_alignStart="@id/txt_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorAsh"
        android:paddingBottom="4dp"
        tools:text="12:45"/>

    <ImageView
        android:id="@+id/img_message_status"
        android:layout_marginStart="15dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/txt_message_body"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_sent"
        android:contentDescription="@string/description_message_status" />

</RelativeLayout>